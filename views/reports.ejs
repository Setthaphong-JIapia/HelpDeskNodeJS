<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reports</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <a href="/dashboard">Home</a>
        <a href="/users">Manage Users</a> <!-- เปลี่ยนจาก Manage Users -->
        <a href="/reports">Reports</a>
        <a href="/logout">Logout</a>
      </nav>
    <h1>Generated Reports</h1>
    <form action="/generate-report" method="POST">
        <label for="reportType">Select Report Type:</label>
        <select name="reportType" id="reportType" required>
            <option value="Ticket Queue">Ticket Queue</option>
            <option value="Ticket Status">Ticket Status</option>
        </select>
        <button type="submit">Generate Report</button>
    </form>
    <table border="1" style="color: black;">
        <thead>
            <tr>
                <th>Report ID</th>
                <th>Report Type</th>
                <th>Generated By</th>
                <th>Generated At</th>
                <th>Report Data</th>
            </tr>
        </thead>
        <tbody>
            <% reports.forEach(report => { %>
                <tr>
                    <td><%= report.reportId %></td>
                    <td><%= report.reportType %></td>
                    <td><%= report.generatedBy %></td>
                    <td><%= report.generated_at %></td>
                    <td>
                        <table>
                            <thead>
                                <tr>
                                    <th>Queue ID</th>
                                    <th>Priority Level</th>
                                    <th>Ticket ID</th>
                                    <th>User ID</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Created Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% const data = JSON.parse(report.reportData); %>
                                <% data.forEach(ticket => { %>
                                    <tr>
                                        <td><%= ticket.queueId %></td>
                                        <td><%= ticket.priorityLevel %></td>
                                        <td><%= ticket.ticketId %></td>
                                        <td><%= ticket.userId %></td>
                                        <td><%= ticket.description %></td>
                                        <td><%= ticket.status %></td>
                                        <td><%= new Date(ticket.createdDate).toLocaleString() %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
